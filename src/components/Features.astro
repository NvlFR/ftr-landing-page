---
// src/components/Features.astro

const features = [
  {
    title: "Integrasi Mudah & Cepat",
    description: "Kami dapat menghubungkan chatbot dengan sistem CRM atau database yang sudah Anda gunakan.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" /></svg>`,
    color: "blue"
  },
  {
    title: "Didukung AI Cerdas",
    description: "Chatbot kami dilatih untuk memahami bahasa natural dan konteks percakapan pelanggan.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 21v-1.5M12 3v1.5M12 21v-1.5M12 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" /></svg>`,
    color: "purple"
  },
  {
    title: "Dukungan Penuh 24/7",
    description: "Tim support kami selalu siap membantu Anda jika terjadi kendala atau butuh optimasi.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" /></svg>`,
    color: "green"
  },
  {
    title: "Tanpa Perlu Coding",
    description: "Kelola jawaban, alur percakapan, dan lihat laporan melalui dashboard yang mudah digunakan.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 7.5l3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0 0 21 18V6a2.25 2.25 0 0 0-2.25-2.25H5.25A2.25 2.25 0 0 0 3 6v12a2.25 2.25 0 0 0 2.25 2.25Z" /></svg>`,
    color: "orange"
  },
];

// Function untuk mendapatkan class warna berdasarkan jenis
type Color = "blue" | "purple" | "green" | "orange";

const getColorClasses = (color: Color) => {
  const colorMap: Record<Color, { bg: string; icon: string; border: string; hover: string }> = {
    blue: {
      bg: 'bg-blue-50 dark:bg-blue-900/20',
      icon: 'text-blue-600 dark:text-blue-400',
      border: 'border-blue-200 dark:border-blue-700',
      hover: 'hover:border-blue-400 dark:hover:border-blue-500'
    },
    purple: {
      bg: 'bg-purple-50 dark:bg-purple-900/20',
      icon: 'text-purple-600 dark:text-purple-400',
      border: 'border-purple-200 dark:border-purple-700',
      hover: 'hover:border-purple-400 dark:hover:border-purple-500'
    },
    green: {
      bg: 'bg-green-50 dark:bg-green-900/20',
      icon: 'text-green-600 dark:text-green-400',
      border: 'border-green-200 dark:border-green-700',
      hover: 'hover:border-green-400 dark:hover:border-green-500'
    },
    orange: {
      bg: 'bg-orange-50 dark:bg-orange-900/20',
      icon: 'text-orange-600 dark:text-orange-400',
      border: 'border-orange-200 dark:border-orange-700',
      hover: 'hover:border-orange-400 dark:hover:border-orange-500'
    }
  };

  return colorMap[color];
};
---
<section id="fitur" class="relative bg-gradient-to-b from-white to-slate-50 dark:from-gray-900 dark:to-gray-800 py-16 lg:py-24 overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-blue-200 rounded-full -translate-y-1/2 translate-x-1/2 opacity-20 dark:bg-blue-900/30 blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-80 h-80 bg-purple-200 rounded-full translate-y-1/2 -translate-x-1/2 opacity-20 dark:bg-purple-900/30 blur-3xl"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in-up">
      <span class="inline-block px-4 py-1.5 text-sm font-medium bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400 rounded-full mb-4">
        Keunggulan
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-800 dark:text-white mb-4">
        Kenapa Memilih <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400">FTR</span>?
      </h2>
      <p class="max-w-2xl mx-auto text-lg md:text-xl text-slate-600 dark:text-gray-300">
        Kami tidak hanya membuat chatbot, kami membangun jembatan komunikasi yang cerdas dan efisien untuk bisnis Anda.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {features.map((feature, index) => {
        const colorClasses = getColorClasses(feature.color as Color);
        return (
          <div 
            class={`group relative bg-white dark:bg-gray-900 p-6 rounded-xl border-2 ${colorClasses.border} ${colorClasses.hover} transition-all duration-500 hover:-translate-y-2 shadow-md hover:shadow-xl overflow-hidden animate-fade-in-up`}
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Hover effect background -->
            <div class={`absolute inset-0 ${colorClasses.bg} opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10`}></div>
            
            <!-- Icon Container -->
            <div class={`mb-5 p-3 rounded-xl ${colorClasses.bg} w-14 h-14 flex items-center justify-center group-hover:scale-110 transition-transform duration-500 mx-auto`}>
              <span class={`${colorClasses.icon} w-8 h-8`} set:html={feature.icon} />
            </div>
            
            <!-- Content -->
            <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-3 text-center group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
              {feature.title}
            </h3>
            <p class="text-slate-600 dark:text-gray-300 text-center leading-relaxed">
              {feature.description}
            </p>
            
            <!-- Decorative element on hover -->
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-current to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </div>
        )
      })}
    </div>

    <!-- Stats Section -->
    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-6 lg:gap-8 animate-fade-in-up" style="animation-delay: 500ms">
      <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md border border-gray-100 dark:border-gray-700">
        <div class="text-3xl md:text-4xl font-bold text-blue-600 dark:text-blue-400 mb-2">100+</div>
        <div class="text-sm md:text-base text-slate-600 dark:text-gray-300">Klien Terlayani</div>
      </div>
      <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md border border-gray-100 dark:border-gray-700">
        <div class="text-3xl md:text-4xl font-bold text-blue-600 dark:text-blue-400 mb-2">24/7</div>
        <div class="text-sm md:text-base text-slate-600 dark:text-gray-300">Dukungan Teknis</div>
      </div>
      <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md border border-gray-100 dark:border-gray-700">
        <div class="text-3xl md:text-4xl font-bold text-blue-600 dark:text-blue-400 mb-2">99%</div>
        <div class="text-sm md:text-base text-slate-600 dark:text-gray-300">Kepuasan Klien</div>
      </div>
      <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md border border-gray-100 dark:border-gray-700">
        <div class="text-3xl md:text-4xl font-bold text-blue-600 dark:text-blue-400 mb-2">1Jt+</div>
        <div class="text-sm md:text-base text-slate-600 dark:text-gray-300">Percakapan/hari</div>
      </div>
    </div>
  </div>

  <style>
    /* Animations */
    .animate-fade-in-up {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 0.8s ease forwards;
    }
    
    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</section>