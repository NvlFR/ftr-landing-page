---
// src/components/Services.astro

// Data untuk kartu layanan. Ini membuat kode lebih rapi.
const services = [
  {
    title: "Chatbot CS AI WhatsApp",
    description: "Otomatiskan 80% pertanyaan pelanggan dengan balasan instan, cerdas, dan aktif 24/7 langsung di platform WhatsApp.",
    // Nanti kita bisa tambahkan properti icon di sini
  },
  {
    title: "Chatbot Personal Finance AI",
    description: "Bantu pengguna Anda mengelola keuangan, cek tagihan, dan dapatkan laporan pengeluaran secara personal dan mudah.",
  },
  {
    title: "Chatbot Tracking Resi AI",
    description: "Berikan kemudahan bagi pelanggan untuk melacak status paket secara real-time dari berbagai kurir tanpa meninggalkan WhatsApp.",
  }
];
---
<section id="layanan" class="bg-slate-50 dark:bg-gray-800 py-16 lg:py-24">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-slate-800 dark:text-white">
        Solusi Chatbot AI untuk Setiap Kebutuhan
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-gray-300">
        Kami menyediakan berbagai jenis chatbot yang siap diintegrasikan dengan bisnis Anda.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(service => (
        <div class="bg-white dark:bg-gray-900 p-8 rounded-xl shadow-md hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
          <div class="text-blue-600 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-2">{service.title}</h3>
          <p class="text-slate-600 dark:text-gray-300">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>