---
// src/components/Services.astro

// Data untuk kartu layanan dengan icon yang sesuai
const services = [
  {
    title: "Chatbot CS AI WhatsApp",
    description: "Otomatiskan 80% pertanyaan pelanggan dengan balasan instan, cerdas, dan aktif 24/7 langsung di platform WhatsApp.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      <path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01" />
    </svg>`,
    color: "blue"
  },
  {
    title: "Chatbot Personal Finance AI",
    description: "Bantu pengguna Anda mengelola keuangan, cek tagihan, dan dapatkan laporan pengeluaran secara personal dan mudah.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
    color: "green"
  },
  {
    title: "Chatbot Tracking Resi AI",
    description: "Berikan kemudahan bagi pelanggan untuk melacak status paket secara real-time dari berbagai kurir tanpa meninggalkan WhatsApp.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2h-2" />
    </svg>`,
    color: "indigo"
  }
];

// Function untuk mendapatkan class warna berdasarkan jenis
type Color = "blue" | "green" | "indigo";

const getColorClasses = (color: Color) => {
  const colorMap = {
    blue: {
      bg: 'bg-blue-50 dark:bg-blue-900/20',
      icon: 'text-blue-600 dark:text-blue-400',
      border: 'border-blue-200 dark:border-blue-700',
      hover: 'hover:border-blue-400 dark:hover:border-blue-500'
    },
    green: {
      bg: 'bg-green-50 dark:bg-green-900/20',
      icon: 'text-green-600 dark:text-green-400',
      border: 'border-green-200 dark:border-green-700',
      hover: 'hover:border-green-400 dark:hover:border-green-500'
    },
    indigo: {
      bg: 'bg-indigo-50 dark:bg-indigo-900/20',
      icon: 'text-indigo-600 dark:text-indigo-400',
      border: 'border-indigo-200 dark:border-indigo-700',
      hover: 'hover:border-indigo-400 dark:hover:border-indigo-500'
    }
  };
  return colorMap[color] || colorMap.blue;
};
---
<section id="layanan" class="relative bg-gradient-to-b from-slate-50 to-white dark:from-gray-800 dark:to-gray-900 py-16 lg:py-24 overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute top-0 left-0 w-full h-96 bg-gradient-to-r from-blue-500/5 to-indigo-500/5 dark:from-blue-700/10 dark:to-indigo-700/10 -skew-y-3 -translate-y-24"></div>
  <div class="absolute bottom-0 right-0 w-72 h-72 bg-blue-200 rounded-full -translate-x-1/4 translate-y-1/4 opacity-20 dark:bg-blue-900/30 blur-3xl"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in-up">
      <span class="inline-block px-4 py-1.5 text-sm font-medium bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400 rounded-full mb-4">
        Layanan Kami
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-800 dark:text-white mb-4">
        Solusi <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400">Chatbot AI</span> untuk Setiap Kebutuhan
      </h2>
      <p class="max-w-2xl mx-auto text-lg md:text-xl text-slate-600 dark:text-gray-300">
        Kami menyediakan berbagai jenis chatbot yang siap diintegrasikan dengan bisnis Anda untuk meningkatkan efisiensi dan pengalaman pelanggan.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {services.map((service, index) => {
        const colorClasses = getColorClasses(service.color as Color);
        return (
          <div 
            class={`group relative bg-white dark:bg-gray-900 p-6 lg:p-8 rounded-2xl border-2 ${colorClasses.border} ${colorClasses.hover} transition-all duration-500 hover:-translate-y-2 shadow-md hover:shadow-xl overflow-hidden animate-fade-in-up`}
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Hover effect background -->
            <div class={`absolute inset-0 ${colorClasses.bg} opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10`}></div>
            
            <!-- Icon Container -->
            <div class={`mb-6 p-3 rounded-xl ${colorClasses.bg} w-16 h-16 flex items-center justify-center group-hover:scale-110 transition-transform duration-500`}>
              <span class={colorClasses.icon} set:html={service.icon} />
            </div>
            
            <!-- Content -->
            <h3 class="text-xl lg:text-2xl font-bold text-slate-800 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
              {service.title}
            </h3>
            <p class="text-slate-600 dark:text-gray-300 leading-relaxed mb-4">
              {service.description}
            </p>
            
            <!-- Learn More Link -->
            <a 
              href="#kontak" 
              class="inline-flex items-center text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 mt-2 group/link"
            >
              Konsultasi Sekarang
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 group-hover/link:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        )
      })}
    </div>

    <!-- CTA Section -->
    <div class="mt-16 text-center animate-fade-in-up" style="animation-delay: 400ms">
      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-800 rounded-2xl p-8 md:p-12 border border-gray-200 dark:border-gray-700">
        <h3 class="text-2xl md:text-3xl font-bold text-slate-800 dark:text-white mb-4">
          Butuh Solusi Kustom untuk Bisnis Anda?
        </h3>
        <p class="text-slate-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">
          Tim ahli kami siap mengembangkan chatbot AI yang disesuaikan dengan kebutuhan spesifik bisnis Anda.
        </p>
        <a 
          href="#kontak" 
          class="inline-flex items-center bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-0.5"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
          </svg>
          Hubungi Tim Kami
        </a>
      </div>
    </div>
  </div>

  <style>
    /* Animations */
    .animate-fade-in-up {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 0.8s ease forwards;
    }
    
    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</section>