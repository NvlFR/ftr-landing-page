---
// src/components/Footer.astro

const currentYear = new Date().getFullYear();

const footerLinks = {
  company: {
    title: "Perusahaan",
    links: [
      { name: "Tentang Kami", href: "#tentang" },
      { name: "Layanan", href: "#layanan" },
      { name: "Proses", href: "#proses" },
      { name: "Blog", href: "#blog" },
    ]
  },
  services: {
    title: "Layanan",
    links: [
      { name: "Chatbot CS AI", href: "#layanan" },
      { name: "Chatbot Finance", href: "#layanan" },
      { name: "Tracking Resi", href: "#layanan" },
      { name: "Kustom Solusi", href: "#layanan" },
    ]
  },
  support: {
    title: "Dukungan",
    links: [
      { name: "FAQ", href: "#faq" },
      { name: "Dokumentasi", href: "#" },
      { name: "Status Layanan", href: "#" },
      { name: "Bantuan", href: "#kontak" },
    ]
  }
};

const socialLinks = [
  {
    name: "WhatsApp",
    href: "https://wa.me/6285703846460",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>`
