---
// src/layouts/MainLayout.astro
// Kita bisa menambahkan properti di sini nanti, misalnya untuk judul halaman
import '../styles/global.css'; 
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro'; 


const { title } = Astro.props;

---
<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-g" />
    <meta name="description" content="FTR - Solusi Cerdas Chatbot AI untuk Bisnis Anda. Customer Service, Personal Finance, Tracking Resi, dan lainnya." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
	<Header />
      <slot />
      <Footer />
  </body>
</html>

<style is:global>
  /* Style global sederhana untuk memulai */
  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background-color: #f8fafc; /* Warna latar belakang netral */
    color: #1e293b; /* Warna teks gelap */
    margin: 0;
    padding: 0;
  }
  main {
    max-width: 1200px; /* Lebar maksimum konten */
    margin: 0 auto; /* Posisi di tengah */
    padding: 2rem; /* Jarak dari tepi */
  }
</style>